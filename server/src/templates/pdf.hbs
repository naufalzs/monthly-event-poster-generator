<style type="text/css">
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,600;0,700;1,400&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,600;0,700;1,400&display=swap");
  * {
    margin: 0;
    padding: 0;
  }

  body {
    margin: 2rem;
    font-family: "Montserrat", sans-serif;
    font-weight: 500;
    color: #0a0a0a;
  }

  h2 {
    font-family: "Poppins", sans-serif;
    font-weight: 200;
    span {
      font-weight: 700;
    }
  }

  table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fafafa;
    border: 1px solid #e5e5e5;
  }

  table tr {
    th,td {
      padding: 1rem;
    }

    th {
      background-color: #60a5fa;
    }

    td {
      border-bottom: 1px solid #e5e5e5;
    }

    td:nth-child(even) {
      text-align: center;
    }
  }

  .table-title {
    margin-top: 1rem;
    margin-bottom: 0.25rem;
  }

  .col-2 {
    min-width: 150px;
    width: 10%;
  }
</style>
<html>
  <head>
    <title>PDF</title>
  </head>
  <body>
    <h2>To Do List Belanja <span>{{name}}</span></h2>
    <p>Belanja untuk keperluan {{desc}}</p>
    <p class="table-title">List Belanjaan</p>
    <table>
      <thead>
        <tr>
          <th>Barang</th>
          <th class="col-2">Qty</th>
        </tr>
      </thead>
      <tbody>
        {{#each items as |item|}}
        <tr>
          <td>{{item.name}}</td>
          <td>{{item.qty}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </body>
</html>
